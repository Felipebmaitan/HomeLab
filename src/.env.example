# Example Environment Configuration
# Copy this file to .env and update with your actual values
# 
# IMPORTANT: This configuration uses subdomain-based routing
# Each service runs on its own subdomain (e.g., jellyfin.yourdomain.com)
# Make sure to configure DNS A records for each subdomain pointing to your server IP


# Email Configuration
ADMIN_EMAIL=your-email@example.com

# Domain Configuration
DOMAIN=yourdomain.com

# Full service URLs for external access (now using subdomains)
JELLYFIN_PUBLISHED_SERVER_URL=https://jellyfin.${DOMAIN}
SONARR_EXTERNAL_URL=https://sonarr.${DOMAIN}
RADARR_EXTERNAL_URL=https://radarr.${DOMAIN}
JACKETT_EXTERNAL_URL=https://jackett.${DOMAIN}
QBITTORRENT_EXTERNAL_URL=https://qbittorrent.${DOMAIN}
MEMPOOL_EXTERNAL_URL=https://mempool.${DOMAIN}

# Timezone Configuration
TZ=America/Sao_Paulo

# Bitcoin Core RPC Configuration
BITCOIN_RPC_USER=mempool
BITCOIN_RPC_PASSWORD=RPC_PASSWD

# Database Configuration
MYSQL_ROOT_PASSWORD=DATABASE_ROOT_PASSWD
MYSQL_DATABASE=mempool
MYSQL_USER=mempool
MYSQL_PASSWORD=DATABASE_PASSWD

# User/Group IDs
PUID=1000
PGID=1000

# Service Ports
QBITTORRENT_WEBUI_PORT=8080
SONARR_PORT=8989
RADARR_PORT=7878
JACKETT_PORT=9117
JELLYFIN_PORT=8096
JELLYFIN_HTTPS_PORT=8920
MEMPOOL_FRONTEND_PORT=8090
BITCOIN_RPC_PORT=8332
BITCOIN_P2P_PORT=8333
FULCRUM_PORT=50001

# ZMQ Ports
BITCOIN_ZMQ_RAWBLOCK_PORT=28332
BITCOIN_ZMQ_RAWTX_PORT=28333
BITCOIN_ZMQ_HASHBLOCK_PORT=28334
BITCOIN_ZMQ_SEQUENCE_PORT=28335

# Bitcoin Core Configuration
BITCOIN_DBCACHE=4000
BITCOIN_MAXMEMPOOL=2000
BITCOIN_MEMORY_LIMIT=8g

# Mempool Backend Configuration
MEMPOOL_BACKEND_PORT=8999
DATABASE_PORT=3306